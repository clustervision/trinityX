/var/log/sensu/sensu-client.log {
    rotate 7
    daily
    missingok
    notifempty
    sharedscripts
    compress
    postrotate
        kill -USR2 `cat /var/run/sensu/sensu-client.pid 2> /dev/null` 2> /dev/null || true
    endscript
}

