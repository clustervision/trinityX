{{ ansible_managed | comment }}

[Unit]
Description=Prometheus amd Exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
User={{ prometheus_amd_exporter_system_user }}
Group={{ prometheus_amd_exporter_system_group }}
ExecStart={{ prometheus_amd_exporter_binary_install_dir }}/prometheus-amd-exporter \
    --web.listen-address={{ prometheus_amd_exporter_web_listen_host }}:{{ prometheus_amd_exporter_web_listen_port }}

SyslogIdentifier=prometheus_amd_exporter
Restart=always
RestartSec=1
{% if prometheus_amd_exporter_log_dir is defined %}
StandardOutput=append:{{prometheus_amd_exporter_log_dir}}/prometheus_amd_exporter.log
{% endif %}
PrivateTmp=yes
{% for m in (ansible_mounts|default([])) if m.mount == '/home' %}
ProtectHome=read-only
{% else %}
ProtectHome=yes
{% endfor %}
NoNewPrivileges=yes

ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes

[Install]
WantedBy=multi-user.target
