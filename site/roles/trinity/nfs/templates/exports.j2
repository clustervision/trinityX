# Trinity NFS exports

{% for export in new_nfs_exports %}
{% set disabled = export.get('disabled', False) %}
{% if not disabled and 'path' in export %}
{% set export_type = export.get('type') %}
{% if export_type in ['manual', 'nfs'] %}
{# For manual or nfs type, just output the path and options #}
{{ export.path }}   {{ export.options | default('') }}
{% else %}
{# For other types, check for rwhosts #}
{% if export.get('rwhosts') %}
{{ export.path }}   {{ nfs_rw_options }} {{ export.rwhosts }} {{ export.options | default('') }}
{% else %}
{{ export.path }}   {{ export.options | default('') }}
{% endif %}
{% endif %}
{% endif %}
{% endfor %}
