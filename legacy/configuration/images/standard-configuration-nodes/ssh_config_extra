
# ---  TrinityX ---

# Names without domain, such as node001
host  * !*.*
	ForwardX11 yes
	CheckHostIP no
	HostbasedAuthentication no
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null

# Our local domains
Host  *.cluster *.infiniband
	ForwardX11 yes
	CheckHostIP no
	HostbasedAuthentication no
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null

